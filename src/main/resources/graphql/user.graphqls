type User {
    username: String!
    tag: String!
    firstName: String!
    lastName: String
    bio: String
    birthdate: Date
    profilePicture: String
}

extend type Query {
    getUser(username: String!, tag: String!): User,
    getCurrentUser: User
}

extend type Mutation {
    updateUser(
        username: String!,
        tag: String!,
        firstName: String,
        lastName: String,
        bio: String,
        birthdate: Date,
        proficlePicture: String
    ): User
}