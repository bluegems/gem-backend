extend type Query {
    getFriends(username: String!, tag: String!) : [User]
}

extend type Mutation {
    requestFriendship(username: String!, tag: String!) : Void,
    acceptFriendship(username: String!, tag: String!): Void,
    declineFriendship(username: String!, tag: String!): Void,
    deleteRequest(username: String!, tag: String!): Void,
    blockUser(username: String!, tag: String): Void,
    unblockUser(username: String!, tag: String): Void
}
